@model Wanderlust.ViewModel.BookingSummaryViewModel

@{
    ViewBag.Title = "Booking Summary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h2 class="mb-0"><i class="bi bi-clipboard-check me-2"></i>Booking Summary</h2>
        </div>
        <div class="card-body">
            <!-- Booking Info -->
            <h4 class="fw-semibold mb-3"><i class="bi bi-info-circle me-1"></i>Booking Information</h4>
            <ul class="list-group mb-4">
                <li class="list-group-item d-flex justify-content-between">
                    <span>Booking ID:</span>
                    <span>@Model.Booking.booking_id</span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    <span>Status:</span>
                    <span class="badge bg-success">@Model.Booking.status</span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    <span>Cost:</span>
                    <span>@Model.Booking.bk_cost.ToString("C")</span>
                </li>
            </ul>

            <!-- Trip Info -->
            @if (Model.PackageInfo != null)
            {
                <h5 class="text-decoration-underline"><i class="bi bi-box-seam me-1"></i>Package Details</h5>
                <p class="mb-3">@Model.PackageInfo.name</p>
            }
            @if (Model.DestinationInfo != null)
            {
                <h5 class="text-decoration-underline"><i class="bi bi-geo-alt me-1"></i>Destination Details</h5>
                <p class="mb-3">@Model.DestinationInfo.destName</p>
            }
            @if (Model.ItineraryInfo != null)
            {
                <h5 class="text-decoration-underline"><i class="bi bi-calendar3-week me-1"></i>Itinerary Details</h5>
                <p class="mb-3">@Model.ItineraryInfo.itinerary_name</p>
            }

            <!-- Payment Info -->
            <h4 class="fw-semibold mt-4"><i class="bi bi-credit-card-2-back-fill me-1"></i>Payment Details</h4>
            @if (Model.Payments != null)
            {
                <ul class="list-group">
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Amount Paid:</span>
                        <span>@Model.Payments.amount.ToString("C")</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Payment Date:</span>
                        <span>@Model.Payments.payment_date.ToString("MM/dd/yyyy")</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Payment Method:</span>
                        <span>@Model.Payments.payMethod</span>
                    </li>
                </ul>
            }
            else
            {
                <p class="text-muted">No payment record found.</p>
            }
        </div>
    </div>
</div>
