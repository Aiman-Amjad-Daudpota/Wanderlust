@model IEnumerable<Wanderlust.Models.PACKAGE>

@{
    ViewBag.Title = "Packages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <h2 class="text-center mb-4" style="color: #ff7f50;">🍁 Our Autumn Packages</h2>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-lg-3">
                <div class="card h-100 shadow border-0" style="background-color: #fff5f0;">
                    <img src="~/@item.image" class="card-img-top" alt="@item.name" style="height: 200px; object-fit: cover; border-top-left-radius: 0.5rem; border-top-right-radius: 0.5rem;">

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-center" style="color: #d2691e;">@item.name</h5>

                        <div class="mt-auto d-flex justify-content-center pt-2">
                            @Html.ActionLink("View Details 🍂", "Details", new { id = item.pkg_id }, new { @class = "btn btn-autumn btn-sm" })
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <!-- Add this div for extra space before footer -->
    <div class="footer-spacing"></div>
</div>