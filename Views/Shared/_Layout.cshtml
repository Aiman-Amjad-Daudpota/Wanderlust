<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Wanderlust</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            background-color: #fff8f0;
            font-family: 'Segoe UI', sans-serif;
            padding-top: 70px;
        }

        .navbar {
            background-color: #d2691e;
        }

        .btn-autumn {
            background-color: #ffa07a;
            border: none;
        }

            .btn-autumn:hover {
                background-color: #ff7f50;
                color: white;
            }

        .card:hover {
            transform: scale(1.02);
            transition: all 0.3s ease-in-out;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
        }

        .no-navbar-spacing{
            margin-top: -70px;
        }

        main {
            flex: 1;
        }

        footer {
            background-color: #d2691e;
            color: white;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Home")">🍂 Wanderlust</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Destination")">Destinations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Package")">Packages</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container-fluid px-0 mt-0">
        @RenderBody()
    </main>

    <footer class="text-center py-4">
        <div class="container">
            <p class="mb-0">&copy; @DateTime.Now.Year Wanderlust Travel | Made for explorers 🍁</p>
        </div>
    </footer>

    @RenderSection("scripts", required: false)

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
</body>
</html>
