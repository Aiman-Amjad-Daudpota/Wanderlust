@model Wanderlust.ViewModel.HomeViewModel

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section with Carousel -->
<div id="heroCarousel" class="carousel slide no-navbar-spacing" data-bs-ride="carousel">
    <div class="carousel-inner" style="height: 80vh;">
        <div class="carousel-item active">
            <img src="~/Images/Carousel/car-1.jpg" class="d-block w-100" style="object-fit: cover;" alt="Adventure Awaits">
            <div class="carousel-caption d-none d-md-block">
                <h1 class="display-4">Adventure Awaits 🍁</h1>
                <p>Explore stunning places this autumn!</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Images/Carousel/car-2.jpg" class="d-block w-100" style="object-fit: cover;" alt="Breathtaking Views">
            <div class="carousel-caption d-none d-md-block">
                <h1 class="display-4">Breathtaking Views 🌄</h1>
                <p>Discover cozy corners of the world.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Images/Carousel/car-3.jpg" class="d-block w-100" style="height:1000px" alt="Magical Journeys">
            <div class="carousel-caption d-none d-md-block">
                <h1 class="display-4">Magical Journeys ✈️</h1>
                <p>Travel with Wanderlust this season!</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<div class="container my-5">
    <section class="mb-5">
        <h2 class="mb-4 text-center text-primary">🍁 Featured Destinations</h2>
        <div class="row g-4">
            @foreach (var destination in Model.FeaturedDestinations)
            {
                <div class="col-md-3">
                    <div class="card h-100 shadow-sm">
                        <img src="~/@destination.image" class="card-img-top" alt="@destination.destName" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-center">@destination.destName</h5>
                            <p class="card-text text-center fw-bold text-success">Price: $@destination.price</p>
                            <p class="card-text">@destination.description</p>
                            <div class="mt-auto text-center">
                                @Html.ActionLink("View Details 🍂", "Details","Destination", new { id = destination.dest_id }, new { @class = "btn btn-autumn btn-sm" })
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    <hr class="my-5" />

    <section>
        <h2 class="mb-4 text-center text-primary">🍂 Featured Packages</h2>
        <div class="row g-4">
            @foreach (var package in Model.FeaturedPackages)
            {
                <div class="col-md-3">
                    <div class="card h-100 shadow-sm">
                        <img src="~/@package.image" class="card-img-top" alt="@package.name" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-center">@package.name</h5>
                            <p class="card-text text-center fw-bold text-success">Price: $@package.price</p>
                            <p class="card-text">@package.description</p>
                            @*<div class="mt-auto text-center">
                                <a href="" class="btn btn-autumn btn-sm">View Details</a>
                            </div>*@
                            <div class="mt-auto text-center">
                                @Html.ActionLink("View Details 🍂", "Details","Package", new { id = package.pkg_id }, new { @class = "btn btn-autumn btn-sm" })
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</div>
